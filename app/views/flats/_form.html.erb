<%= simple_form_for flat do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :description %>
<%= f.input :price_per_night, inner_html: { min: 0 } %>
<%= f.input :number_of_guests, inner_html: { min: 0 } %>
<%= f.input :picture_url %>
<%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
